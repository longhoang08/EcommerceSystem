<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LayoutViewTab">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutBuyrecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@android:color/holo_green_dark"
                app:tabSelectedTextColor="@android:color/holo_red_dark"
                app:tabTextColor="#b3b3b3"
                tools:layout_editor_absoluteX="1dp">

<!--                <com.google.android.material.tabs.TabItem-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Chờ xác nhận" />-->

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang giao" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao" />

            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerBuyrecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/LayoutViewTab">
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>