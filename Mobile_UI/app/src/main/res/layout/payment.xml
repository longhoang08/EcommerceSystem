<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/byRecordLabel"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ABE3DDDF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="30dp"
                    android:text="Thanh toán"
                    android:textSize="25sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:src="@drawable/ic_baseline_add_location_24" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:hint="Nhập địa chỉ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#C8D1D0"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="List Product"
                    android:textSize="25sp"></TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.example.mobile_ui.ExpandHeightGridView
                    android:id="@+id/simpleListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/colorAccent"
                    android:dividerHeight="2dp"></com.example.mobile_ui.ExpandHeightGridView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_shipping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#94E1D9"
                        android:paddingLeft="30dp"
                        android:text="Vận chuyển"
                        android:textSize="30sp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="50dp">

                        <TextView
                            android:id="@id/title"
                            android:layout_width="219dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="21dp"
                            android:text="Vận chuyển nhanh"
                            android:textSize="25sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/title"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="36dp"
                            android:layout_marginTop="40dp"
                            android:text="Giao hàng nhanh"
                            android:textSize="20sp" />
                        <!--                        <TextView-->
                        <!--                            android:id="@+id/delivery_date"-->
                        <!--                            android:layout_width="235dp"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_alignTop="@+id/content"-->
                        <!--                            android:layout_alignParentLeft="true"-->
                        <!--                            android:layout_marginLeft="36dp"-->
                        <!--                            android:layout_marginTop="40dp"-->
                        <!--                            android:text="Nhận hàng vào 12Th06-15Th06"-->
                        <!--                            android:textSize="15sp" />-->

                        <TextView
                            android:id="@+id/shipMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="256dp"
                            android:layout_marginTop="61dp"
                            android:text="đ151.786"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:padding="4dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewBuy"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginRight="5dp"
                android:padding="4dp"
                android:id="@+id/textViewTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintEnd_toStartOf="@+id/textViewBuy"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <TextView
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/textViewBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua hàng"
                android:padding="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

