<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StallActivity">
    <!--            card User-->
    <RelativeLayout
        android:id="@+id/stall_infor"
        android:layout_width="match_parent"
        android:background="#C9E6CA"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/stall_infor_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="90dp">
            <ImageView
                android:id="@+id/stall_infor_img_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/google"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/stall_infor_img"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:text="Nguyễn Thành An"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/numOfPro"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:text="số sản phẩm : 7"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <!--            list Products-->
            <ListView
                android:id="@+id/stallProListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/stall_infor"
                android:paddingBottom="40dp"/>
<!--    add sp va show buyRecord-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stallProListView">
        <TextView
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF8400"
            android:padding="10dp"
            android:text="Thêm sản phẩm"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stallBuyRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CE009969"
            android:padding="10dp"
            android:text="Đơn hàng"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>