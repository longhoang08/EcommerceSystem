<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingAccountActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00BCD4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="Hồ Sơ"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Change"
            android:id="@+id/changeOrSave"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E9EDEF"
                android:id="@+id/container_user_img">
                <androidx.cardview.widget.CardView
                    android:id="@+id/user_infor_img_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/user_infor_img"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/google" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#aaa"
                    >
                    <TextView
                        android:id="@+id/touchToChangeImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="chạm để thay đổi"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Tên đăng nhập"
                    android:padding="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="thanhanstar"
                    android:background="#0000"
                    android:id="@+id/user_name"
                    />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_height="1dp"
                android:background="#989797"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Giới tính"
                    android:padding="20dp"/>

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:checked="true"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_height="1dp"
                android:background="#989797"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Ngày sinh"
                    android:padding="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="11/8/1999"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/date_of_birth"/>
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_height="1dp"
                android:background="#989797"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:padding="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xóm 2 xã nhân khang huyện lý nhân tỉnh hà nam"
                    android:background="#0000"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/address"
                    />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_height="1dp"
                android:background="#989797"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Số điện thoại"
                    android:padding="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0966947994"
                    android:background="#0000"
                    android:id="@+id/phone"
                    />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_height="1dp"
                android:background="#989797"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Mật khẩu"
                    android:padding="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0966947994"
                    android:background="#0000"
                    android:id="@+id/pass"
                    android:inputType="textPassword"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/container_again_pass">
                <TextView
                    android:text=""
                    android:layout_height="1dp"
                    android:background="#989797"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Nhập lại mật khẩu"
                        android:padding="20dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:background="#0000"
                        android:id="@+id/againPass"
                        android:inputType="textPassword"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>