<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".StallDetailProductActivity"
android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#00BCD4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:text="Chi tiết sản phẩm"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="Change"
        android:id="@+id/changeOrSave"/>
</RelativeLayout>
<HorizontalScrollView
    android:id="@+id/horizontalScrollViewAddImageProduct"
    android:layout_width="match_parent"
    android:layout_height="130dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imgProductsRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal"

            />
        <ImageButton
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:contentDescription="chụp ảnh"
            android:id="@+id/addImgFromCamera"

            />
        <ImageButton
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_folder_open_black_24dp"
            android:contentDescription="chọn ảnh có sẵn"
            android:id="@+id/addImgFromFolder"
            />
    </LinearLayout>
</HorizontalScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="tên sản phẩm"/>

    <EditText
        android:id="@+id/edtDescript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="mô tả sản phẩm"
        android:scrollHorizontally="false"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:text="Loại hàng"
            android:textSize="20dp"
            />
        <Spinner
            android:layout_marginLeft="100dp"
            android:id="@+id/typeProduc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_alignParentRight="true"
            android:hint="Ngành hàng"
            android:layout_marginBottom="0dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_attach_money_black_24dp"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType= "number"
            android:hint="đặt giá"
            android:gravity="right"
            android:paddingTop="18dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginRight="5dp"
            android:id="@+id/price"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_store_mall_directory_black_24dp"/>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kho hàng"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType= "number"
            android:hint="số lượng"
            android:gravity="right"
            android:paddingTop="18dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginRight="5dp"
            android:id="@+id/number"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>